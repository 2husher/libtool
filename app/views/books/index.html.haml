=link_to 'Add book to library', new_book_path

%h1
  All Books
%table
  %tr
    %th
      Identity
    %th
      Title
    %th
      Author
    %th
      Annotation
    %th
      Publishing year
    %th
      Reader
  - @books.each do |book|
    %tr
      %td
        = book.identity
      %td
        = book.title
      %td
        = book.author
      %td 
        = book.publishing_year
      %td
        = book.reader_id
      %td
        = link_to 'Show', book
      %td
        = link_to 'Delete', book, method: :delete

