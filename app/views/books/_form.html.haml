-size_field = 60

= form_for @book do |b|
  -#= render partial: 'shared/errors', locals: { object: b.object }
  %div.field
    = b.label :identity
    = b.text_field :identity, size: size_field
  %div.field
    = b.label :title
    = b.text_field :title, size: size_field
  %div.field
    = b.label :author
    = b.text_field :author, size: size_field
  %div.field
    = b.label :annotation
    = b.text_area :annotation, rows:4, cols: size_field
  %div.field
    = b.label :publishing_year
    = b.date_select :publishing_year, start_year: 1950, end_year: 2014, discard_day: true, discard_month: true
    
    -#= b.hidden_field :reader_id
  %div.actions
    = b.submit submit_lbl