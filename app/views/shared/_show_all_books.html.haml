%table
  %tr
    %th
      Identity
    %th
      Title
    %th
      Author
    %th
      Returning date
    %th
      Reader
    %th
    %th
    %th
    %th
  - books.each do |book|
    %tr(class="#{cycle('odd_line', 'even_line')}")
      %td
        = book.identity
      %td
        = book.title
      %td
        = book.author
      %td 
        = days_to_return book
      %td
        = book.reader_id
      %td
        = link_to 'Show', book
      %td
        = link_to 'Return', return_path(id: book.id)
      %td
        = link_to 'Continue', continue_path(book.id)
      %td
        = link_to 'Delete', book, method: :delete
 